// Register
main.login-body(data-vide-bg='assets/img/login.jpg')
  // Login Admin
  form.form-default(action='' method='POST')
    .login-form
      // logo-login
      .logo-login
        a(href='/')
          img(src='assets/img/logo/onion_logo.svg' alt='' style="width:100px;height:100px;margin-top:5px;")
      h2 Đăng ký tài khoản
      .form-input
        label(for='name') Họ &amp; Tên
        input(type='text' name='name' placeholder='Họ và Tên' onfocus='this.placeholder=""')
      .form-input
        label(for='name') Email
        input(type='email' name='email' placeholder='Email' onfocus='this.placeholder=""')
      .form-input
        label(for='name') Mật khẩu
        input(type='password' name='password' placeholder='Mật khẩu' onfocus='this.placeholder=""')
      .form-input
        label(for='name') Xác nhận mật khẩu
        input(type='password' name='re_password' placeholder='Xác nhận mật khẩu' onfocus='this.placeholder=""')
      .form-input.pt-30
        input(type='submit' name='submit' value='Đăng ký')
      // Forget Password
      a.registration(href='/login') Đăng nhập
  // /end login form
