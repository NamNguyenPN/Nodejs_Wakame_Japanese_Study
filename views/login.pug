    a(href='/') 
      //img(src='assets/img/logo/onion_logo.svg' alt='' style="width:150px;height:120px;margin-top:5px;")

  // Login Admin
  form.form-default(action='/login' method='POST')
    .login-form(style="margin-top:-5px;border-radius:50px;width:600px;padding-bottom:20px;border-radius:50px;background:rgb(0, 0, 0,0.2);box-shadow:0px 0px 0px 0px rgba(0,0,0,0.5)")
      // logo-login
      .logo-login
        a(href='')
          img(src='assets/img/logo/onion_logo.svg' alt='')    
      h2 Đăng nhập
      .form-input
        input(type='email' name='email' placeholder='Email' onfocus='this.placeholder=""' onblur='this.placeholder="Email"')
        if errors.email
          small.form-text(id="passwordHelpBlock" style="color:yellow")
            |   #{errors.email}
        else 
          small.form-text(id="passwordHelpBlock" style="color:yellow;visibility:hidden")
            |   jfidfijsdi   
      .form-input
        //label(for='name') Mật khẩu
        input(type='password' name='password' placeholder='Mật khẩu' onfocus='this.placeholder=""' onblur='this.placeholder="Mật khẩu"')
        if errors.password
          small.form-text(id="passwordHelpBlock" style="color:yellow")
            |   #{errors.password}
        else
          small.form-text(id="passwordHelpBlock" style="color:yellow;visibility:hidden")
            |   Mật khẩu không đúng.  
      .form-inputs(style='font-size:17px')
        input(type='checkbox' name='password' style="width:20px")
        label(for='name' style='display:inline') Duy trì đăng nhập
      .form-input
        input(type='submit' name='submit' value='Đăng nhập')
      .row.justify-content-between
        .col-xl-6.col-lg-5.col-md-4.col-sm-6
          .single-services.mb-30
            // Forget Password
            a.forget(href='#' style="width:fit-content;margin-top:0px") Quên mật khẩu
            // Forget Password
            a.registration(href='/register' style="width:fit-content") Chưa có tài khoản?
        .col-xl-6.col-lg-5.col-md-4.col-sm-6
          .single-services.mb-10(style="margin-top:0px;color:white")
            .footer-social
              p(style="color:white") Đăng nhập bằng
                a(href='https://facebook.com' target='_blank' style="background-color:#3b5998;margin-left:10px")
                  i.fab.fa-facebook-f(style="color:white")
                a(href='https://gmail.com' target='_blank' style="background-color:#ea4335;margin-left:1px")
                  i.fab.fa-google-plus-g(style="color:white")  
      .single-services.mb-30
        // Forget Password
        a.forget(href='/' style="width:fit-content;margin-top:0px;margin-left:auto;margin-right:auto;") Về trang chủ
