                  li
                    a(href='#') #talkshow
              aside.single_sidebar_widget.instagram_feeds
                h4.widget_title(style='color: #2d2d2d;') Instagram New Feeds
                ul.instagram_row.flex-wrap
                  li
                    a(href='#')
                      img.img-fluid(src='assets/img/post/post_5.png' alt='')
                  li
                    a(href='#')
                      img.img-fluid(src='assets/img/post/post_6.png' alt='')
                  li
                    a(href='#')
