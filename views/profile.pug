extends layout.pug 
block main 
  main
    // ? slider Area Start
    section.slider-area.slider-area2
      .slider-active
        // Single Slider
        .single-slider.slider-height2
          .container
            .row
              .col-xl-8.col-lg-11.col-md-12
                .hero__caption.hero__caption2
                  h1(data-animation='bounceIn' data-delay='0.2s') Thông tin cá nhân
                  // breadcrumb Start
                  nav(aria-label='breadcrumb')
                    ol.breadcrumb
                      li.breadcrumb-item
                        a(href='/') Trang chủ
                      li.breadcrumb-item
                        a(href='/profile') Thông tin cá nhân
                  // breadcrumb End
    // ? About Area-1 Start
    section.about-area1.fix.pt-10.mb-30.mt-30
      .support-wrapper.align-items-center
        .left-content1
          // section tittle
          .section-tittle.section-tittle2.mb-55
            .front-text
            .row
              .col-xl-8.col-lg-11.col-md-12
                h2 #{user_name}
              .col-xl-4.col-lg-11.col-md-12(style="margin-top:20px")
                a(href="https://github.com/mctminhtai/Nodejs_Wakame_Japanese_Study" target="blank" style="color:#4255a4;font-size:17px")
                  i.fas.fa-edit
                  | &nbsp;Chỉnh sửa thông tin
            .features-caption
              h3 Họ và tên
              p #{user_name}
            .features-caption
              h3 Email
              p #{user_name}@gmail.com
            .features-caption
              h3 Số điện thoại
              p #{user_name}@gmail.com
            .features-caption
              h3 Giới tính
            .features-caption
              h3 Địa chỉ
            .features-caption
              h3 Ngày sinh
    // ? About Area-1 End
