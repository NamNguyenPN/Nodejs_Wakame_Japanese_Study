                    .arrow
                      a(href='#')
                        span.lnr.text-white.ti-arrow-right
                    .thumb
                      a(href='#')
                        img.img-fluid(src='assets/img/blog/blog_talkshow.jpg' alt='' style="width:50px;height:50px")
            .blog-author
